/* pages/food/food.wxss */
.content {
  padding: 20rpx;
}
.h2 {
  font-size: 36rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.food{
  display: flex;
  flex-flow: row wrap;
  /* justify-content: space-between; */
}
.fItem{
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  width: 31%;
  margin: 0 9rpx;
  margin-bottom: 20rpx;
}
.fItem image {
  width: 100%;
  height: 220rpx;
  border-radius: 20rpx;
}
.fItem .title {
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 700;
  color: #3d3d3d;
}
.fItem .pice {
  font-size: 30rpx;
}